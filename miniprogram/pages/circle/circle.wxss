.addcircle{
  display: flex;
  width: 200rpx;
  height: 250rpx;
  border-radius: 30rpx;
  margin:30rpx 40rpx;
  background: #fff;

  /* box-shadow: h-shadow v-shadow blur spread color inset;  水平，垂直，*/
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: darkorange;
}
.addcircle text{
  display: block;
  font-size: 100rpx;
  padding: 20rpx 40rpx;
  /* box-sizing: border-box; */
}
.item{
  background:#fff;
  width: 90%;
  height: 150rpx;
  display: flex;
  padding: 10rpx 20rpx;
  flex:1;
  position: relative;
  align-items: center;
  /* justify-content: space-between; */
  margin: 20rpx auto;
  
}
.img{
  width: 150rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.img image{
  width: 100%;
  height: 100%;
}
.content{
 margin-left: 30rpx;
 margin-top: 30rpx;
 display: flex;
 flex-direction: column;
 
}
.content text:nth-child(0){
  font-size: 30rpx;
  font-weight: 100;
}
.data {
  display: flex;
  width: 200rpx;
  height: 30rpx;
  margin-top: 30rpx;
  justify-content: space-between;
}
.data text{
  color:grey;
  font-size: 20rpx;
}

.jj{
  position: absolute;
  right:0;
  padding: 10rpx 20rpx;
}
