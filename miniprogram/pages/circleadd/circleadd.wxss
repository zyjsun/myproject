.content{
  background:#eee;
  padding: 20rpx;
}
.head{
  width: 100%;
  height: 100rpx;
  box-shadow: 7px 7px 20px #ececec;
}
.sure{
  width: 80%;
  margin: 40rpx auto;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  border-radius: 38rpx;
  box-shadow: 7px 7px 20px #ececec;
  background: linear-gradient(45deg, #ace,green);
  color:burlywood;
  box-sizing: border-box;
}


.circle-title{
  margin-bottom: 30rpx;
}

.circle-title>view{
  font-weight: 400;
  font-size: 28rpx;
  color:rgba(69,90, 100, 0.6);
  padding: 10px;
}

.circle-type{
  float:right;
  width: 140rpx;
  position: relative;
}

.circle-type::after{
  content:'';
  position: absolute;
  border-top:2rpx solid rgba(69,90, 100, 0.6) ;
  border-right: 2rpx solid rgba(69,90, 100, 0.6);
  right: 0;
  top: 10rpx;
  width: 20rpx;
  height: 20rpx;
  transform:rotate(45deg) ;
}